# ============================================
# AVTOJON ENVIRONMENT VARIABLES
# Bu faylni .env ga ko'chiring va to'ldiring
# ============================================

# ============ SERVER ============
NODE_ENV=production
PORT=3000

# ============ DATABASE ============
MONGODB_URI=mongodb://localhost:27017/avtojon

# ============ JWT ============
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# ============ REDIS (ixtiyoriy) ============
REDIS_URL=redis://localhost:6379

# ============ CORS ============
CORS_ORIGINS=https://avtojon.uz,https://www.avtojon.uz

# ============ SUPER ADMIN ============
SUPER_ADMIN_LOGIN=super_admin
SUPER_ADMIN_PASSWORD=YourSecurePassword123

# ============ GROQ AI (Ovozli kiritish) ============
# https://console.groq.com dan oling
GROQ_API_KEY=your_groq_api_key

# ============ PAYME TO'LOV ============
# https://merchant.paycom.uz dan oling
PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_KEY=your_payme_secret_key
PAYME_TEST_KEY=your_payme_test_key
PAYME_SANDBOX=false

# ============ URL LAR ============
FRONTEND_URL=https://avtojon.uz
API_URL=https://avtojon.uz
VITE_API_URL=/api

# ============ TEST REJIM (ixtiyoriy) ============
# Trial muddatini minutlarda belgilash (default: 7 kun)
# TRIAL_MINUTES=5
